<div class="message">

<div class="avatar"><img src="{foto}" width="32" height="32" alt="{name}" /></div>

<div class="info"><b>{author}</b><br />{date}</div>

<hr />

<div class="text">{message}</div>

<div align="right">
[allow_reply]<img class="action" onmouseover="iChat_copy_quote('{name}');" onclick="iChat_reply('{name}'); return false;" src="{THEME}/img/quote.png" alt="Ответить" />[/allow_reply]
[allow_edit]<img class="action" onclick="iChatEdit('{id}','site'); return false;" src="{THEME}/img/edit.png" alt="Редактировать"/>[/allow_edit]
[allow_delete]<img class="action" onclick="iChatDelete('{id}','site'); return false;" src="{THEME}/img/delete.png" alt="Удалить"/>[/allow_delete]
</div>

</div>