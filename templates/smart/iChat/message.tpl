<div class="chat">
<img alt="Написал" title="Написал" src="{THEME}/img/author.png" width="16" border="0" style="vertical-align:-2px"/><strong>{author}</strong>
<div style="float:right;font-size:8px;vertical-align:top; color: #000;">{date}</div>
<div class="hr1"></div>
<span style="color:#2a2a2a">{message}<div align="right">

[allow_reply]<img class="edit_buttons" style="width: 14px;" onmouseover="iChat_copy_quote('{name}');" onclick="iChat_reply('{name}'); return false;" src="{THEME}/img/comment.png" alt="Ответить"/>[/allow_reply]

[allow_edit]<img class="edit_buttons" style="width: 14px;" onclick="iChatEdit('{id}','site'); return false;" src="{THEME}/img/edit.png" alt="Редактировать"/>[/allow_edit]

[allow_delete]<img class="edit_buttons" style="width: 14px;" onclick="iChatDelete('{id}','site'); return false;" src="{THEME}/img/delete.png" alt="Удалить"/>[/allow_delete]

</div></span>
</div>